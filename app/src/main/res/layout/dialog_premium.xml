<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:gravity="right"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/dialog_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="دریافت کد ارتقا"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="۳۰۰۰۸۰  "
                android:textColor="@color/darkGray" />

            <TextView
                android:id="@+id/dialog_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_premium1"
                android:textColor="@color/darkGray" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ارسال نمایید و عضو سرویس پیامک پروشات شوید."
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/dialog_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="هزینه عضویت در سرویس روزانه ۳۰۰ تومان می باشد."
            android:textSize="12sp"
            android:textColor="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="دریافت کد ارتقا"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="تمایلی ندارم"
                android:textColor="@color/black" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>