<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_icon_tb_main"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:animateLayoutChanges="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/toolbar_icons_ll_text"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="0.25"
            android:gravity="bottom"
            android:onClick="toolbar_icons_ll_text"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toolbar_icons_img_text"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="btn"
                android:tint="@color/grayDisabled"
                android:visibility="gone" />

            <TextView
                android:id="@+id/toolbar_icons_txt_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="متن"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/text_indicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/pink"
                android:orientation="horizontal"
                android:visibility="invisible"
                ></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_icons_ll_frame"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:onClick="toolbar_icons_ll_frame"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toolbar_icons_img_frame"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="btn"
                android:tint="@color/gold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/toolbar_icons_txt_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="قاب"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/frame_indicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/pink"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/toolbar_icons_ll_sticker"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:onClick="toolbar_icons_ll_sticker"
            android:orientation="vertical"
            android:visibility="gone">


            <ImageView
                android:id="@+id/toolbar_icons_img_sticker"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="btn"
                android:tint="@color/grayDisabled"
                android:visibility="gone" />

            <TextView
                android:id="@+id/toolbar_icons_txt_sticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="استیکر"
                android:textColor="@color/grayDisabled"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
